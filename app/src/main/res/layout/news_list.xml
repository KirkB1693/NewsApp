<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:paddingEnd="@dimen/list_padding"
    android:paddingLeft="@dimen/list_padding"
    android:paddingRight="@dimen/list_padding"
    android:paddingStart="@dimen/list_padding">

    <TextView
        android:id="@+id/news_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_top_margin"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textAllCaps="true"
        android:textColor="@color/textColorNewsHeadline"
        android:textSize="@dimen/news_headline_font_size"
        tools:text="Headline" />

    <ImageView
        android:id="@+id/news_thumbnail"
        android:layout_width="@dimen/thumbnail_height"
        android:layout_height="@dimen/thumbnail_height"
        android:layout_below="@+id/news_headline"
        android:contentDescription="news_thumbnail"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/news_byline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_headline"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_toRightOf="@+id/news_thumbnail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/textColorNewsByline"
        android:textSize="@dimen/news_byline_font_size"
        tools:text="sample_author_text" />

    <TextView
        android:id="@+id/news_blurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_byline"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_toRightOf="@+id/news_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorNewsBlurb"
        android:textSize="@dimen/news_blurb_font_size"
        tools:text="sample_body_text" />

    <TextView
        android:id="@+id/news_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_blurb"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_toRightOf="@+id/news_thumbnail"
        android:text="Section"
        android:textColor="@color/textColorNewsByline"
        android:textSize="@dimen/news_blurb_font_size" />

    <TextView
        android:id="@+id/news_publication_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_blurb"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:text="Publication Date"
        android:textColor="@color/textColorNewsByline"
        android:textSize="@dimen/news_blurb_font_size" />


</RelativeLayout>